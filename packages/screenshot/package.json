{
  "name": "bsky-screenshot",
  "version": "1.0.0",
  "type": "module",
  "description": "CLI tool to screenshot Bluesky posts",
  "main": "dist/cli.js",
  "bin": {
    "bsky-screenshot": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "postinstall": "playwright install chromium"
  },
  "keywords": [
    "bluesky",
    "screenshot",
    "cli",
    "social-media"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "playwright": "^1.49.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
